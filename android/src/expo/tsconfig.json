{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "outDir": "./build",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "**/__tests__/*"
  ]
} 